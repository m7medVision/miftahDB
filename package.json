    "@semantic-release/npm": "^12.0.1",
    "@semantic-release/release-notes-generator": "^14.0.1",
    "@types/better-sqlite3": "^7.6.11",
    "@types/msgpack-lite": "^0.1.11",
    "@types/node": "^22.5.1",
    "nodemon": "^3.1.4",
    "semantic-release": "^24.1.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.4"
